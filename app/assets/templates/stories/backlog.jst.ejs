<div class="panel-title">
  Backlog
  <br>
  Remaining: <%= totalPoints %> pts
</div>
<div id="backlog-items">
  <% backlogStories.each(function(story){ %>
    <div data-id='<%= story.id %>' class="single-story">
      <div class='story-link'>
        <a href='#/main' class='story-title' data-id='<%= story.id %>'><%= story.escape('title') %></a>
      </div>
      <div class='story-action'>
        <a class='btn btn-warning btn-mini' id='start-story' data-id='<%= story.id %>'>Start</a>
      </div>
    </div>
  <% }) %>
</div>

<script>
$("#backlog-items").sortable({
  connectWith: ["#completed-items", "#current-items"],
  update: function(event, ui){
    console.log("backlog")
    ui.item.trigger('dropbacklog', ui.item.index());
  }
})
</script>